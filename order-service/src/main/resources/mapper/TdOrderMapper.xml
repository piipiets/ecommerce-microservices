<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.microservices.orderservice.mapper.TdOrderMapper">
    <insert id="insertOrder">
        INSERT INTO order_service.td_order
            <trim prefix="(" suffix=")" suffixOverrides=",">
                order_number,
                order_date
            </trim>
        VALUES
            <trim prefix="(" suffix=")" suffixOverrides=",">
                #{orderNumber},
                #{orderDate}::date
            </trim>
    </insert>
    <select id="getOrderByOrderNumber" resultType="java.lang.String">
        SELECT
            order_number
        FROM
            order_service.td_order
        WHERE
            order_number = #{orderNumber}
    </select>
</mapper>